<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ahp"
        xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" x:Class="ahp.MainWindow"
        mc:Ignorable="d"
        Title="AHP EHan Engineering" Height="350" Width="525">
    
    
    <Grid>

        <Custom:Ribbon x:Name="ribbon" HorizontalAlignment="Left" VerticalAlignment="Top" Width="518" ShowQuickAccessToolBarOnTop="False" WindowIconVisibility="Hidden" Margin="0,-21,0,0">
            <Custom:Ribbon.ApplicationMenu>
                <Custom:RibbonApplicationMenu Visibility="Collapsed"/>
            </Custom:Ribbon.ApplicationMenu>
            
            <Custom:RibbonTab Name="prjTab" Header="Project">
                <Custom:RibbonGroup Header="Project">
                    <Custom:RibbonButton LargeImageSource="pack://application:,,,/Resources/new.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0"/>
                    <Custom:RibbonButton LargeImageSource="pack://application:,,,/Resources/save.png"></Custom:RibbonButton>
                    <Custom:RibbonButton LargeImageSource="pack://application:,,,/Resources/open1.ico"></Custom:RibbonButton>
                </Custom:RibbonGroup>
            </Custom:RibbonTab>
            <Custom:RibbonTab Name="altTab" Header="Alternatives">
                <Custom:RibbonGroup>
                    <Custom:RibbonButton Label="Add"></Custom:RibbonButton>
                </Custom:RibbonGroup>
                <Custom:RibbonGroup>
                    <Custom:RibbonButton Label="Delete"></Custom:RibbonButton>
                </Custom:RibbonGroup>
            </Custom:RibbonTab>
            <Custom:RibbonTab Header="Criteria">
                <Custom:RibbonGroup>
                    <Custom:RibbonButton Label="Add"></Custom:RibbonButton>
                </Custom:RibbonGroup>
                <Custom:RibbonGroup>
                    <Custom:RibbonButton Label="Delete"></Custom:RibbonButton>
                </Custom:RibbonGroup>
                <Custom:RibbonGroup>
                    <Custom:RibbonButton Label="Compare Matrix"></Custom:RibbonButton>
                </Custom:RibbonGroup>
                <Custom:RibbonGroup>
                    <Label>CR</Label>
                    <Custom:RibbonTextBox></Custom:RibbonTextBox>
                </Custom:RibbonGroup>
            </Custom:RibbonTab>
            <Custom:RibbonTab Header="Preference">
                <Custom:RibbonGroup>
                    <Custom:RibbonButton Label=""></Custom:RibbonButton>
                </Custom:RibbonGroup>
            </Custom:RibbonTab>
            <Custom:RibbonTab Header="Result">
                <Custom:RibbonGroup>
                    <Custom:RibbonButton Label=""></Custom:RibbonButton>
                </Custom:RibbonGroup>
            </Custom:RibbonTab>
        </Custom:Ribbon>
        
        <!-- main content, change according to tab selection-->
        <Grid x:Name="MainGrid" Margin="0,117,0.4,0.4">
            <Grid.Resources>
                <BooleanToVisibilityConverter x:Key="boolToVis" />
            </Grid.Resources>

            <Grid Visibility="{Binding IsSelected, Converter={StaticResource boolToVis}, ElementName=prjTab}">
                <Label>tab1</Label>
            </Grid>
            <Grid Visibility="{Binding IsSelected, Converter={StaticResource boolToVis}, ElementName=altTab}">
                <Label>tab2</Label>
            </Grid>
        </Grid>



    </Grid>
</Window>
